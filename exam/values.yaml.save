cast:
   deployment:
      name: cast-deployment 
      app: cast
      replicas: 3
      container:
         name: cast
         image: cast:latest
         imagePullPolicy: Never
         port: 5000

   service:
      name: fastapi-entrypoint
      app: fastapi
      port: 8002
      targetPort: 8000

   ingress:
      name: cast-ingress
      clusterIssuer: letsencrypt-prod
      ingressClassName: traefik
      secretName: rancher-secret
      hostname: monsite.datascientest-test.cloudns.biz
      path: /
      pathType: Prefix
      serviceName: fastapi-entrypoint
      port: 80

   hpa:
      name: fastapi-hpa
      scaleTargetRef:
         apiVersion: apps/v1
         kind: Deployment
         name: fastapi-deployment
      minReplicas: 3
      maxReplicas: 6
      targetCPU: 70
